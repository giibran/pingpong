<div><%= button_to "Click here to add a new match", new_match_path, :method => :get %></div>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Win %</th>
      <th>W</th>
      <th>L</th>
      <th>GP</th>
      <th>PSA</th>
      <th>PRA</th>
      <th>Diff</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= "%.2f" % player.win_ratio %></td>
        <td><%= player.wins %></td>
        <td><%= player.losses %></td>
        <td><%= player.matches_played %></td>
        <td><%= "%.2f" % player.average_points_scored %></td>
        <td><%= "%.2f" % player.average_points_received %></td>
        <td><%= "%.2f" % player.average_points_differential %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %> |
<%= link_to 'Players', players_path %>